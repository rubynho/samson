<fieldset>
  <legend>External Setup Hook</legend>
  <div class="col-lg-offset-2">
    <div class="form-group">
      <h3>Choose the external setup hook <%= additional_info "Leave empty to do nothing.".html_safe %></h3>
      <div class="col-lg-6">
        <%= form.collection_select :external_setup_hook_id, ExternalSetupHook.all, :id, :name, { include_blank: true }, { class: 'form-control' } %>
      </div>
    </div>
  </div>
</fieldset>
